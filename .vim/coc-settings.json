{
  "java.errors.incompleteClasspath.severity": "ignore",
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "filetypes": [
        "scala",
        "sbt"
      ],
      "rootPatterns": [
        "build.sbt"
      ]
    },
    "bash": {
      "ignoredRootPaths": [
        "~"
      ],
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ]
    },
    "haskell": {
      "command": "hie-wrapper",
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "settings": {
        "languageServerHaskell": {
          "hlintOn": false,
          "completionSnippetsOn": true,
          "maxNumberOfProblems": 10
        }
      },
      "initializationOptions": {}
    }
  }
}
